[user]
  email = alex.slynko@wonga.com
  name = Alex Slynko
[core]
	editor = /usr/bin/vim
[push]
  default = current
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color]
  ui = auto
[diff]
  wordRegex = [^[:space:]]
[init]
	templatedir = ~/.git_template
[alias]
	ready = !jira_autocommit && git fetch && git rebase origin/master && git push
	start = !jira_start
  autocommit = !jira_autocommit
  cleanup = !git checkout master && git pull && git branch  --merged  master | grep -v 'master$' | xargs  git  branch  -d
[help]
	autocorrect = 1
[advice]
	statusHints = false
[branch]
	autosetuprebase = always
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autostash = true
[log]
  decorate = true
[format]
  pretty = oneline
